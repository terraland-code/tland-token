{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "QueryMsg",
  "oneOf": [
    {
      "description": "Claims shows the tokens in process of unbonding for this address",
      "type": "object",
      "required": [
        "claims"
      ],
      "properties": {
        "claims": {
          "type": "object",
          "required": [
            "address"
          ],
          "properties": {
            "address": {
              "type": "string"
            }
          }
        }
      },
      "additionalProperties": false
    },
    {
      "description": "Show the number of tokens currently staked by this address.",
      "type": "object",
      "required": [
        "staked"
      ],
      "properties": {
        "staked": {
          "type": "object",
          "required": [
            "address"
          ],
          "properties": {
            "address": {
              "type": "string"
            }
          }
        }
      },
      "additionalProperties": false
    },
    {
      "description": "Show the number of reward to withdraw",
      "type": "object",
      "required": [
        "reward"
      ],
      "properties": {
        "reward": {
          "type": "object",
          "required": [
            "address"
          ],
          "properties": {
            "address": {
              "type": "string"
            }
          }
        }
      },
      "additionalProperties": false
    },
    {
      "description": "Return total staked tokens",
      "type": "object",
      "required": [
        "total"
      ],
      "properties": {
        "total": {
          "type": "object"
        }
      },
      "additionalProperties": false
    },
    {
      "description": "Withdrawn reward",
      "type": "object",
      "required": [
        "withdrawn"
      ],
      "properties": {
        "withdrawn": {
          "type": "object",
          "required": [
            "address"
          ],
          "properties": {
            "address": {
              "type": "string"
            }
          }
        }
      },
      "additionalProperties": false
    }
  ]
}
